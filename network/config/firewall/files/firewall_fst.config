# allow IPsec/ESP and ISAKMP passthrough
config rule
	option src		wan
	option dest		lan
	option proto		esp
	option target		ACCEPT
    option enabled 1

config rule
    option name		alg_ipsec500
	option src		wan
	option dest		lan
	option dest_port	500
	option proto		udp
	option target		ACCEPT
    option enabled 1
    
config rule
    option name		alg_ipsec4500
	option src		wan
	option dest		lan
	option dest_port	500
	option proto		udp
	option target		ACCEPT
    option enabled 1
    
config rule
    option name		alg_pptp
	option src		wan
	option dest		lan
	option dest_port	1723
	option proto		tcp
	option target		ACCEPT
    option enabled 1
    
config rule
    option name		alg_lt2p
	option src		wan
	option dest		lan
	option dest_port	1701
	option proto		udp
	option target		ACCEPT
    option enabled 1
 
