# include a file with users custom iptables rules
config include
	option path /etc/firewall.user
    option enabled 1
    option reload 0

config include
	option path /etc/macfilter
    option enabled 0
    option reload 0

config include
	option path /etc/forwardchildmodelfilter
    option enabled 1
    option reload 0
    
config include
	option path /etc/ipfilter
    option enabled 1
    option reload 0
    
config include
	option path /etc/inputwhitemacfilter
    option enabled 0
    option reload 0
    
config include
	option path /etc/forwardwhitemacfilter
    option enabled 0
    option reload 0
    
config include
	option path /etc/inputblackmacfilter
    option enabled 0
    option reload 0
    
config include
	option path /etc/forwardblackmacfilter
    option enabled 0
    option reload 0

#add by zhanglong for guest ap   
config include
    option path /etc/guest-ap
    option enabled 0
    option reload 0 

config include 'urlfilter'
    option enabled '1'

